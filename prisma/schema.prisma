generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Elo {
  FERRO
  BRONZE
  PRATA
  OURO
  PLATINA
  DIAMANTE
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  passwordHash String

  // Game stats (na mesma tabela)
  lifePoints   Int    @default(3)
  batutaPoints Int    @default(0)
  xpPoints     Int    @default(0)
  elo          Elo    @default(FERRO)
  nivel        String @default("1")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
